<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vGuidePer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <ImageView
        android:id="@+id/ivAboutIcon"
        android:layout_width="@dimen/dp_89"
        android:layout_height="@dimen/dp_89"
        android:src="@mipmap/ic_icon"
        app:layout_constraintBottom_toBottomOf="@id/vGuidePer3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/app_name"
        android:textColor="@color/fontSecond"
        android:textSize="@dimen/sp_22"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivAboutIcon" />

    <TextView
        android:id="@+id/tvCompEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_40"
        android:text="温榆河合作邮箱"
        android:textColor="@color/fontGrey"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vGuidePer3" />

    <TextView
        android:id="@+id/tvCompEmail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wyh@qq.com"
        android:textColor="@color/fontGrey2"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="@id/tvCompEmail"
        app:layout_constraintTop_toBottomOf="@id/tvCompEmail" />

    <TextView
        android:id="@+id/tvOfficalEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:text="广告合作官方邮箱"
        android:textColor="@color/fontGrey"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCompEmail2" />

    <TextView
        android:id="@+id/tvOfficalEmail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wyh@qq.com"
        android:textColor="@color/fontGrey2"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="@id/tvCompEmail"
        app:layout_constraintTop_toBottomOf="@id/tvOfficalEmail" />

    <TextView
        android:id="@+id/tvUserPact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableEnd="@drawable/vertical_line"
        android:text="用户协议"
        android:textColor="@color/blue_700"
        android:textSize="@dimen/sp_16"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tvCompany"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvSecret" />

    <TextView
        android:id="@+id/tvSecret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableEnd="@drawable/vertical_line"
        android:text="隐私政策"
        android:textColor="@color/blue_700"
        android:textSize="@dimen/sp_16"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tvCompany"
        app:layout_constraintLeft_toRightOf="@id/tvUserPact"
        app:layout_constraintRight_toLeftOf="@id/tvBusinessLicense" />

    <TextView
        android:id="@+id/tvBusinessLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableEnd="@drawable/vertical_line"
        android:text="营业执照"
        android:textColor="@color/blue_700"
        android:textSize="@dimen/sp_16"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tvCompany"
        app:layout_constraintLeft_toRightOf="@id/tvSecret"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="中通服科信信息技术有限公司"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>