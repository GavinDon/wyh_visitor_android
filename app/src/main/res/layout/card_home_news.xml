<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_12"
    app:cardBackgroundColor="#F7F7F7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/dp_10">

        <ImageView
            android:id="@+id/ivNewsPic"
            android:layout_width="@dimen/dp_92"
            android:layout_height="@dimen/dp_82"
            android:layout_marginStart="@dimen/dp_12"
            android:scaleType="centerCrop"
            android:src="@mipmap/banner"
            android:transitionName="@string/str_shared"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_12"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="温榆河景区"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toTopOf="@id/tvNewsContent"
            app:layout_constraintLeft_toRightOf="@id/ivNewsPic"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivNewsPic"
            app:layout_constraintVertical_bias="0.5" />


        <TextView
            android:id="@+id/tvNewsContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/fontGrey2"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/ivNewsPic"
            app:layout_constraintLeft_toLeftOf="@id/tvNewsTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNewsTitle"
            tools:text="位于北京西面的太行山诸山，通称西山。叛逃革叛逃革叛逃革。通称西山。叛逃革。通称西山。叛逃革。" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>