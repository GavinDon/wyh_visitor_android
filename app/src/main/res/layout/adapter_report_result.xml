<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/adaReportType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_10"
        android:textColor="@color/fontMajor"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/adaTvReportContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_16"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/app_name"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@id/adaReportType"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adaReportType" />

    <TextView
        android:id="@+id/adaTVReportTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_10"
        android:textColor="@color/color999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/adaReportType"
        app:layout_constraintTop_toBottomOf="@id/adaTvReportContent"
        tools:text="2020-4-29" />

    <TextView
        android:id="@+id/adaTVReportResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:textColor="@color/color999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/adaTVReportTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/adaTVReportTime"
        tools:text="已处理" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/dividerColor"
        app:layout_constraintTop_toBottomOf="@+id/adaTVReportTime" />

</androidx.constraintlayout.widget.ConstraintLayout>