<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cslMan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible">

        <ImageView
            android:id="@+id/infowWindowManIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_man"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/man" />

        <TextView
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男厕"
            android:textColor="@color/fontSecond"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="@id/infoWindowRetailToilet"
            app:layout_constraintRight_toRightOf="@id/infoWindowRetailToilet"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/infoWindowTotalToilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/fontGrey"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/infowWindowManIV"
            app:layout_constraintTop_toBottomOf="@id/man"
            tools:text="总数:111" />

        <TextView
            android:id="@+id/infoWindowRetailToilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontGrey"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/infowWindowManIV"
            app:layout_constraintLeft_toLeftOf="@id/infoWindowTotalToilet"
            app:layout_constraintTop_toBottomOf="@id/infoWindowTotalToilet"
            tools:text="剩余数:11" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cslWoman"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible">

        <ImageView
            android:id="@+id/inwoWindowWomanIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_woman"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/woman" />

        <TextView
            android:id="@+id/woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女厕"
            android:textColor="@color/fontSecond"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="@id/infoWindowWomanRetailToilet"
            app:layout_constraintRight_toRightOf="@id/infoWindowWomanRetailToilet"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/infoWindowWomanTotalToilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/fontGrey"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/inwoWindowWomanIv"
            app:layout_constraintTop_toBottomOf="@id/woman"
            tools:text="总数:111" />

        <TextView
            android:id="@+id/infoWindowWomanRetailToilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontGrey"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/inwoWindowWomanIv"
            app:layout_constraintLeft_toRightOf="@id/inwoWindowWomanIv"
            app:layout_constraintTop_toTopOf="@id/inwoWindowWomanIv"
            tools:text="剩余数:11" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cslBarrierFree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible">

        <ImageView
            android:id="@+id/infoWindowBfIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_br"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrierFree" />

        <TextView
            android:id="@+id/barrierFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无障碍"
            android:textColor="@color/fontSecond"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="@id/infoWindowBrRetailToilet"
            app:layout_constraintRight_toRightOf="@id/infoWindowBrRetailToilet"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/infoWindowBrTotalToilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/fontGrey"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/infoWindowBfIv"
            app:layout_constraintTop_toBottomOf="@id/barrierFree"
            tools:text="总数:111" />

        <TextView
            android:id="@+id/infoWindowBrRetailToilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontGrey"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/infoWindowBrTotalToilet"
            app:layout_constraintTop_toBottomOf="@id/infoWindowBrTotalToilet"
            tools:text="剩余数:11" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
