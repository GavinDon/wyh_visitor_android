<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/adaIvPlantWiki"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/banner" />

    <TextView
        android:id="@+id/adaTvPlantWikiTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_5"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/fontMajor"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toRightOf="@id/adaIvPlantWiki"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/adaIvPlantWiki"
        tools:text="@string/app_name" />


    <TextView
        android:id="@+id/adaTvPlantWikiContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_5"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/light"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/adaIvPlantWiki"
        app:layout_constraintLeft_toLeftOf="@id/adaTvPlantWikiTitle"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="内容" />

    <TextView
        android:id="@+id/adaTvVegetationTip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/light"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@id/adaTvPlantWikiContent"
        app:layout_constraintLeft_toLeftOf="@id/adaTvPlantWikiContent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/app_name" />
</androidx.constraintlayout.widget.ConstraintLayout>