<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryYellow</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustPan</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:exported">false</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <!--启动-->
    <style name="AppStartLoadTranslucent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_layer</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:screenOrientation">portrait</item>

    </style>


    <style name="CardView.home">
        <item name="cardCornerRadius">@dimen/dp_16</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!--登陆textInputLabel-->
    <style name="loginLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/grey_500</item>
    </style>
    <!--投诉textInputLabel-->
    <style name="complaintLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/grey_500</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="complaint_edit" parent="TextAppearance.AppCompat">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:minHeight">@dimen/dp_48</item>
        <item name="android:textColor">@color/color999</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:background">@null</item>
    </style>

    <style name="loginLabelHint" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="loginLabelError" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="tablayout" parent="Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!--自定义Dialog样式-->
    <style name="fullDialog" parent="AlertDialog.AppCompat">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="halfDialog" parent="AlertDialog.AppCompat">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--右边弹出Dialog动画-->
    <style name="RightAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_right_in</item>
        <item name="android:windowExitAnimation">@anim/anim_right_out</item>
    </style>

    <style name="BannerDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">10000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#00ffffff</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/no_dot</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示器的位置 -->
        <item name="banner_indicatorGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">1000</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">0sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/transparent</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
        <!--        <item name="banner_placeholderDrawable">@mipmap/banner</item>-->
    </style>

    <style name="selectPicture" parent="picture.default.style">
        <item name="colorPrimaryDark">@color/colorTabSelect</item>
        <item name="colorPrimary">@color/colorTabSelect</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/colorTabSelect</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/colorTabSelect</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/colorTabSelect</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/picture_orange_oval</item>

    </style>

    <style name="asrDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <!--浮在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowEnterAnimation">@anim/alpha_enter</item>

    </style>

    <style name="downloadDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--浮在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowEnterAnimation">@anim/alpha_enter</item>
        <!-- 是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <style name="bstDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
         
        <item name="android:windowIsFloating">true</item>
         
        <item name="android:windowFrame">@null</item>
         
        <item name="android:windowIsTranslucent">true</item>

    </style>

</resources>
